generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}


model User {
  id        String    @id @default(uuid())
  username  String    @unique
  email     String    @unique
  password  String    @map("password_hash")
  meals     Meal[]
  workouts  Workout[]
  goal      UserGoal?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model UserGoal {
  id                   String   @id @default(uuid())
  userId               String   @unique

  // Targets
  dailyCaloriesTarget  Int
  dailyProteinTarget   Int
  weeklyWorkoutTarget  Int

  // Meta
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  // Relation
  user                 User     @relation(fields: [userId], references: [id])
}

model Meal {
  id          String    @id @default(uuid())
  name        String
  calories    Int
  protein     Int       @default(0)
  carbs       Int       @default(0)
  fat         Int       @default(0)
  date        DateTime  @default(now())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relationship to User
  userId      String
  user        User      @relation(fields: [userId], references: [id])

  @@index([userId])
}

model Workout {
  id             String   @id @default(uuid())
  activity       String
  duration       Int      // Stored as an Integer (minutes)
  caloriesBurned Int      // Stored as an Integer
  date           DateTime @default(now())
  
  // Timestamps
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relationship to User
  userId         String
  user           User     @relation(fields: [userId], references: [id])

  // Good practice: Index the foreign key for faster lookups
  @@index([userId])
}